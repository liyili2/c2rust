{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
       {
    "name": "Python: Debug bst_rust",
    "type": "debugpy",
    "request": "launch",
    "program": "${workspaceFolder}/source/pyggi/example/bst_rust.py",   // adjust path if needed
    "cwd": "${workspaceFolder}/source",
    "env": {
        "PYTHONPATH": "${workspaceFolder}/source"
    },
    "args": [
        "--project_path", "../source/pyggi/sample/bst_rust",
        "--mode", "tree",
        "--epoch", "1",
        "--iter", "10"
    ],
    "console": "integratedTerminal",
    "justMyCode": true,
    "subProcess": true
}
,
        {
            "type": "lldb",
            "request": "launch",
            "name": "Cargo launch",
            "cargo": {
                "args": [
                    "build",
                    "--lib"
                ]
            },
            "args": []
        }
    ]
}